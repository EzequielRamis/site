<!doctype html>
<html lang="es" domain="{{ metadata.domain }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Security-Policy" content="{{ csp.regular | safe }}">
    <meta name="theme-color" content="#1A1714">
    {% if title %}
      <title>{{ title }} | {{ metadata.title }}</title>
      <meta property="og:title" content="{{ title }} | {{ metadata.title }}">
    {% else %}
      <title>{{ metadata.title }}</title>
      <meta property="og:title" content="{{ metadata.title }}">
    {% endif %}
    {% set desc = renderData.description or description %}
    {% if not desc %}
      {% set desc = content | removeAnnotation | removeTex | striptags | truncate(140) %}
    {% endif %}
    {% if desc %}
      <meta name="description" content="{{ desc | escape }}">
      <meta property="og:description" content="{{ desc | escape }}">
    {% endif %}
    <link rel="canonical" href="{{ metadata.url }}{{ canonicalUrl or page.url }}">
    <meta
    property="og:url" content="{{ metadata.url }}{{ canonicalUrl or page.url }}"> <!-- This is a blog and so it SHOULD be safe and it is nice for the web
                                              to send referrers cross-origin.
                                              However, if you use sensitive data in URLs, consider changing this to
                                              a value like `origin-when-cross-origin`
                                              https://developer.mozilla.org/en-US/docs/Web/HTTP/Headers/Referrer-Policy -->
    <meta name="referrer" content="no-referrer-when-downgrade">
    <link rel="alternate" href="{{ metadata.feed.path | url | absoluteUrl(metadata.url) }}" type="application/rss+xml" title="{{ metadata.title }}">
    <link rel="preconnect" href="/" crossorigin>
    <script async defer src="{{ "/js/min.js" | addHash }}"></script>
    <!-- Notably iOS UAs also contain Mac OS X -->
    <script csp-hash>
      if (/Mac OS X/.test(navigator.userAgent)) 
        document
          .documentElement
          .classList
          .add('apple')
    </script>
    <!-- css is inserted by optimize-html custom plugin -->
  </head>
  <body>
    <header>
      {# <a href="/" title="PÃ¡gina de inicio">
                                                        <svg width="18" height="18" viewBox="0 0 1 1" xmlns="http://www.w3.org/2000/svg">
                                                        <rect width="1" height="1"/>
                                                        </svg>
                                                        inicio
                                                      </a> #}
      <nav>
        <ul>
          {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
          {%- for entry in collections.all | eleventyNavigation %}
            <li>
              <a href="{{ entry.url | url }}">{{ entry.title }}</a>
            </li>
          {%- endfor %}
        </ul>
      </nav>
    </header>
    <main>
      <article>
        {% if r/\/notas\/./g.test(page.url) %}
          <data>
            <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableFullDate }}</time>
          </data>
        {% endif %}
        <h1>{{ title }}</h1>
        {% block extraArticleHeader %}{% endblock %}
        {% block article %}
          {{ content | safe }}
        {% endblock %}
      </article>
    </main>
    <footer>
      <nav>
        <section>
          <h3>Sitio</h3>
          <ul>
            {%- for entry in collections.all | eleventyNavigation %}
              <li>
                <a href="{{ entry.url | url }}">{{ entry.title }}</a>
              </li>
            {%- endfor %}
            <li>
              <a target="_blank" href="{{ metadata.feed.path }}">rss</a>
            </li>
          </ul>
        </section>
        <section>
          <h3>Contacto</h3>
          <ul>
            <li><a target="_blank"href="{{ metadata.author.github }}">github</a></li>
            <li><a target="_blank"href="{{ metadata.author.linkedin }}">linkedin</a></li>
            <li><a target="_blank" href="mailto:{{ metadata.author.email }}">{{ metadata.author.email }}</a></li>
          </ul>
        </section>
        <button id="theme-switcher" title="Cambiar a modo oscuro/claro">
          <svg
            viewbox="0 0 24 24"
            height="24"
            width="24"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            class="sun">
            <circle cx="12" cy="12" r="5"></circle>
            <path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"></path>
          </svg>
          <svg
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            viewbox="0 0 24 24"
            height="24"
            width="24"
            class="moon">
            <path d="M21 12.79A9 9 0 1111.21 3 7 7 0 0021 12.79z"></path>
          </svg>
        </button>
      </nav>
    </footer>
  </body>
</html>